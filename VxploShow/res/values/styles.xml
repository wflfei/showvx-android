<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionBarSize">35dip</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <style name="ActivityAnim">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_right_out</item>
    </style>

    <style name="popupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_popin</item>
        <item name="android:windowExitAnimation">@anim/bottom_popout</item>
    </style>

    <style name="Theme.vxhsow.MainActionBar" parent="android:Theme.Holo">
        <item name="android:actionBarSize">@dimen/main_actionbar_height</item>
        <item name="android:actionBarStyle">@style/Widget.vxhsow.MainActionBar</item>
        <item name="android:selectableItemBackground">@drawable/selector_vxred</item>
        <item name="android:actionBarItemBackground">@drawable/selector_vxred</item>
    </style>
    
    <style name="Widget.vxhsow.MainActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/vxred</item>
        
    </style>
    
    <style name="Theme.vxhsow.WithActionBar" parent="android:Theme.Holo">
        <item name="android:actionBarSize">@dimen/main_actionbar_height</item>
        <item name="android:actionBarStyle">@style/Widget.vxhsow.ActionBar</item>
        <item name="android:selectableItemBackground">@drawable/selector_vxred</item>
        <item name="android:actionBarItemBackground">@drawable/selector_vxred</item>
    </style>
    
    <style name="Widget.vxhsow.ActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/vxred</item>
        
    </style>
    
    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    
    <style name="Theme.vxshow.HistoryWithActionBar" parent="Theme.vxhsow.MainActionBar">
        <item name="android:actionBarTabStyle">@style/Widget.History.ActionBar.TabView</item>
        
    </style>
    
    <style name="Widget.History.ActionBar.TabView" parent="android:Widget.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>
    

</resources>
